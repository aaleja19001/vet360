@model vet360.Models.Rol

@{
    ViewBag.Title = "Detalles del Rol";
}

<h2>Detalles del Rol</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Nombre)</dt>
        <dd>@Html.DisplayFor(model => model.Nombre)</dd>

        <dt>@Html.DisplayNameFor(model => model.Descripcion)</dt>
        <dd>@Html.DisplayFor(model => model.Descripcion)</dd>

        <dt>@Html.DisplayNameFor(model => model.Activo)</dt>
        <dd>@(Model.Activo ? "Activo" : "Inactivo")</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.RolId }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-default" })
</p>